<h3>All Groups</h3>
<div class="row group-list fluid">
  <div class="col-sm-12">
  <% @groups.each do |group| %>
    <div class="group-box">
      <div class="thumbnail">
        <%= link_to group, title: group.title do %>
          <%= image_tag group.image_url(:thumb) || 'default-group-cover.jpg' %>
        <% end %>
        <div class="content">
          <div class="group-title">
            <h4 class="title-label"><%= link_to group.title, group %></h4>
          </div>
        </div>
        <p class="group-description"><%= group.description %></p>
        <div class="group-post-count clearfix">
          <span class="label label-primary">10</span>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
