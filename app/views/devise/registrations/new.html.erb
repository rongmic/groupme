<div class="session-panel">
  <div class="row">
    <div class="col-lg-offset-4 col-md-4">
      <h4>Create an Account</h4>

      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), wrapper: :bootstrap, defaults: {input_html: {class: "form-control"}}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username, :required => true, :autofocus => true %>
          <%= f.input :email, :required => true %>
          <%= f.input :password, :required => true %>
          <%= f.input :password_confirmation, :required => true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Create your Account", disable_with: "login...", class: "btn btn-success" %>
        </div>
      <% end %>

      <div class="link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
