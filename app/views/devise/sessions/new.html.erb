<div class="session-panel">
  <div class="row">
    <div class="col-lg-offset-4 col-lg-4">
      <h4><%= t("common.login") %></h4>

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), wrapper: :bootstrap, defaults: {input_html: {class: "form-control"}}) do |f| %>
        <%= f.input :email, :required => false, :autofocus => true, label: t("attributes.user.email") %>
        <%= f.input :password, :required => false, label: t("attributes.user.password") %>
        <%# f.input :remember_me, :as => :boolean, wrapper_html: { class: 'checkbox' } if devise_mapping.rememberable? %>
        <%= f.submit t("common.login"), disable_with: t("common.logining"), class: "btn btn-primary" %>
      <% end %>
      <div class="link">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
