<div class="row">
  <div class="col-md-12 individual">
    <%= render 'users/individual_nav' %>
    <div class="tab-content">
      <div class="tab-pane active">
        <% @favourite_topics.each do |topic| %>
          <div class="favourite-topic clearfix">
            <div class="col-md-1">
              <%= link_to(image_tag(user_avatar_path(topic.user)), user_path(topic.user)) %>
            </div>
            <div class="col-md-11">
              <%= link_to topic.content, topic %>
              <p class="meta"><%= timeago topic.created_at %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
